{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEvent</th>
                <th>Date</th>
                <th>DescriptionEvent</th>
                <th>PrixEvent</th>
                <th>NbrPlace</th>
                <th>Image</th>
                <th>Valide</th>
                <th>Participants</th>
                <th>Idpatient</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.nomEvent }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.descriptionEvent }}</td>
                <td>{{ evenement.prixEvent }}</td>
                <td>{{ evenement.nbrPlace }}</td>
                <td>{{ evenement.image }}</td>
                <td>{{ evenement.valide }}</td>
                <td>{{ evenement.participants }}</td>
                <td>{{ evenement.idpatient }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
